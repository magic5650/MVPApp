<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="120dp">
    <ImageView android:id="@+id/movie_small_image"
        android:layout_width="64dp"
        android:layout_height="103dp"
        android:layout_margin="8dp"
        android:adjustViewBounds="true"
        android:layout_gravity="center|start"
        android:gravity="center" />
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView android:id="@+id/movie_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
        <TextView android:id="@+id/movie_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center|start"
            android:text="瑞士军刀男 / 救你命3000(港)"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <TextView android:id="@+id/movie_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center|start"
            android:text="2016-07-01(美国)"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        <TextView android:id="@+id/movie_actors"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center|start"
            android:text="阿米尔·汗/拉吉库马尔·希拉尼"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        <TextView android:id="@+id/movie_rating"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center|start"
            android:text="7.9 (38395人评价)"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>
</LinearLayout>